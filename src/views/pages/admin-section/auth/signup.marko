import AuthLayout from "../../../layouts/auth-layout.marko";

<AuthLayout title=`Sign Up | Blog`>
    <div class="auth signup">
        <div class="container">
            <h1>
                Create an account with us and publish your${" "}
                <span class="auth-label">
                    article
                </span>
            </h1>
            <form method="post" action="/admin/auth/signup">
                <input
                    type="text"
                    placeholder="Firstname"
                    name="firstname"
                    aria-label="firstname">
                <input
                    type="text"
                    placeholder="Lastname"
                    name="lastname"
                    aria-label="lastname">
                <input
                    type="text"
                    placeholder="username"
                    name="username"
                    aria-label="username">
                <input
                    type="password"
                    placeholder="password"
                    name="password"
                    aria-label="password">
                <button>Sign up</button>
            </form>
        </div>
        <p>
            Already have an account?${" "}
            <a href="/admin/auth/signin" class="auth-btn signin-btn">
                Sign in
            </a>
        </p>
    </div>
</AuthLayout>
